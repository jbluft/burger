<div class="container">

<div class="row">

  <div class="col-sm-6">
<h1>Burgers to eat</h1>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
    <li>
      <p>
        {{this.id}}. {{this.burger_name}}{{~> burgers/burger-block devoured=true ~}}

      </p>
    </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-sm-6">

  <h2>Eaten Burgers</h2>

  <ul>
  {{#each burgers}}
    {{#if this.devoured}}
    <li>
      <p>
        {{this.burger_name}}

      </p>
    </li>
    {{/if}}
  {{/each}}
</ul>

</div>

</div>

<div class="row">
  <div class="col-lg-12">

<h2>Add a Burger to Eat</h2>

<form class="create-update-form" action="/api/burgers" method="POST">

			  <div class="form-group">
			    <p>Order a burger!</p>
			    <input type="text" id="addBurger" name="burger_name" required>
			  </div>
			  
			  <button class="btn-primary" type="submit">Submit Order</button>
			</form>
</div>
</div>

</div>